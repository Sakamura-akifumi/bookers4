<body>
<main>

<%= render 'books/book',books:@books,user:@user,book:@book %>

　<h2>Users</h2>
　 <table class = "table" >
 　　 <thead>
   　 <th>image</th>
   　<th>name</th>
     </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td>
       <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td><%= user.name %></td>
      <td>フォロー数:<%= user.followings.count %></td>
      <td>フォロワー数:<%= user.followers.count %></td>
      <td><%= link_to "フォローする",user_relationships_path(user), method: :post %></td>
      <td><%= link_to "Show",user_path(user) %></td>


      <% end %>
    </tr>
    </tbody>
   </table>
</body>