<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<body>
<main>
<%= render 'books/book',books:@books,user:@user,book:@book %>
<!--テンプレート共通-->

<!--User一覧画面-->
　<h2>Books</h2>
　 <table class = "table" >
    <thead>
     <th></th>
     <th>Title</th>
     <th>Opinion</th>
   </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
       <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg"),user_path(book.user.id) %>
      </td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <td>
          <% if current_user.already_favorited?(book) %>
           <%= link_to book_favorites_path(book),method: :delete do %>
            <i class="fas fa-heart"></i>
            <% end %>
          <% else %>
           <%= link_to book_favorites_path(book),method: :post do %>
            <i class="far fa-heart"></i>
            <% end %>
          <% end %>
          <%= book.favorites.count %>
      </td>
    </tr>
    <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
</main>
</body>
